<input type="text" name="new_event[tags]" id="new_event_tags" value="<%= @yield %>" style="display:none"/>
<% @tags.each{ |account| %>
<div class="add_event_tag-element"><%= account.first_name %> <span class="add_event_tag-remove" onclick = "removeFromTagList(this.id)" id = "<%= account.id %>">×</span></div>
<% } %>
<% @group_tags.each{ |group| %>
<div class="add_event_tag-element"><%= group.name %> <span class="add_event_tag-remove" onclick = "removeFromTagList(this.id)" id = "<%= "group_"+group.id.to_s %>">×</span></div>
<% } %>